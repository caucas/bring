extends ../layouts/default.jade
block content
	main
		block breads
			- items = ['Главная', 'Доставка еды', 'Вкусняшки']
			.breads
				ul
					+breads(items)
		.wrap
			.nav-tree.xl-2-9.md-1-1
				.checkbox-group.xl-1-1
					span.nav-title(
						data-expand="catalogFilter1",
						data-expand-mode="private"
					) Категория
					ul#catalogFilter1.wrap.xl-1.md-3.sm-2.xxs-1
						a.clearFilter(href="#") Очистить
						- var categoryOptions = ['Мясные продукты', 'Замороженные продукты', 'Молочные продукты', 'Рыба', 'Кондитерские изделия', 'Хлебобулочные изделия', 'Овощи', 'фрукты','Товары для дома', 'Косметика и гигиена', 'Бытовая техника и электроника', 'Всё для детей', 'Бакалея', 'Напитки', 'Подарочные наборы']
						each item in categoryOptions
							li.checkbox: label
								input(type="checkbox")
								div= item
				.checkbox-group.xl-1-1
					span.nav-title(
						data-expand="catalogFilter2",
						data-expand-mode="private"
					) Доп. фильтр
					ul#catalogFilter2.wrap.xl-1.md-3.sm-2.xxs-1
						a.clearFilter(href="#") Очистить
						- var addFilterOptions = ['Вегитарианское', 'Разноцветное', 'Вкусное', 'Черное', 'Красное', 'Ароматное', 'Горячее']
						each item in addFilterOptions
							li.checkbox: label
								input(type="checkbox")
								div= item

			.cat.xl-7-9.md-1-1
				- for(var j=0; j<2; j++)
					h2.caps-text продукты (категория)
					.wrap.xl-gutter-30
						- for(var i=0; i<4; i++)
							.cat-item.xl-1-2
								.item-image
									a(href="#")
										img(src="/assets/images/cat-item.png", alt="cat item name")
								.item-desc
									.item-name Пицца
									p При заказе от 1200 руб. пицца Моцарелла классик в подарок!
									.basket-area
										span.cost.cost-small 200
											sub руб
										span.add-to-basket
											span 1шт.
											button