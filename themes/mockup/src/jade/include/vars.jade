//- breadcrumbs
mixin breads (items)
	//- if !items
	//- 	- items = ['Главная']
	each item, i in items
		//- если элемент последний, то выводим span
		if i != items.length
			li: a(href="#") #{item}
		else
			li.current: span #{item}

//- pagination
mixin pagination (items, current)
	ul.pagination
		each item, i in items
			if i == current-1
				li.current #{item}
			else
				li #{item}