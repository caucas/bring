.modal.modal-order#order
	.modal-head 
		span Заказ
		a.close-modal.close-modal-btn
	.modal-body.wrap
		.xl-7-12
			label ФИО
			input(type="text", value="Иванов Иван")
			label Адрес доставки
			input(type="text")
			label Контактный телефон
			input(type="text")
			label Комментарий
			textarea
		.order-summ.xl-5-12.right-xl Сумма заказа:
			span 3580р
		.order-payments.radio-group.xl-1-1
			label.radio-group-title Методы оплаты
			label.radio
				input#pay1(type="radio", name="order-payment", value="1")
				span Наличными курьеру (3680р)
			label.radio
				input#pay2(type="radio", name="order-payment", value="2")
				span Безналичная оплата
				img(src="/assets/images/payments.jpg", alt="payments")

	.modal-foot.right-xl
		button.btn.btn-green Заказать
		button.btn.btn-gray.close-modal Назад